<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients_attributes do |rec| %>
    <%= rec.label :ingredient_name_1 %>
    <%= rec.text_field :ingredient_name_1 %><br>

    <%= rec.label :ingredient_name_2 %>
    <%= rec.text_field :ingredient_name_2 %><br>

    <%= rec.label :ingredient_quantity %>
    <%= rec.text_field :ingredient_quantity %><br>
  <% end %>

  <%= f.submit %>
<% end %>
